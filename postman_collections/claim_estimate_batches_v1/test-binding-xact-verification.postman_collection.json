										"type": "text/javascript",
										"exec": [
											"pm.test(\"Status code is 200\", function () {",
											"    pm.response.to.have.status(200);",
											"});",
											"",
											"pm.test(\"Status is equal to 'Healthy'\", function () {",
											"    var jsonData = pm.response.json();",
											"    pm.expect(jsonData.status.service).to.eql(\"Healthy\");",
											"});",
											"",
											"pm.test(\"Environment is equal to value of node_env variable\", function () {",
											"    var jsonData = pm.response.json();",
											"    pm.expect(jsonData.environment).to.eql(pm.environment.get(\"node_env\"));",
											"});",
											""
										]
									}
								}
